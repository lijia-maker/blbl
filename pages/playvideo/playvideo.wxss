.aut{display: flex; align-items: center;margin-bottom: 10rpx;}
.aut .pic{width: 40rpx;height: 40rpx;border-radius: 50%;margin: 0 20rpx 0 10rpx;}

.navs {display: flex;flex-wrap: wrap;align-items: center;}
.nav-item {width: 350rpx;display: flex; align-items: center; flex-direction: column;padding: 0rpx 10rpx;height: 150px;}
.nav-item .nav-image { width: 350rpx;height: 200rpx;}
.nav-item text {margin-top: 5rpx;font-size: 28rpx;color: gray;display: -webkit-box;-webkit-box-orient: vertical;
  -webkit-line-clamp: 2;overflow: hidden;}

.tn{display: flex; align-items: center;margin-bottom: 10rpx;}
.video-item{margin-bottom: 10rpx;width: 100%;}
.tn .pic{width: 50rpx;height: 50rpx;border-radius: 50%;}
.tn .nam{font-size: 28rpx;}
.con{font-size: 33rpx;background-color: rgb(230, 233, 231);padding:   10rpx;width: 100%; display: inline-block}

.title{ display: flex;justify-content: space-between;margin: 20rpx 0;margin: 0 0 0 10rpx;}
.txt2{margin: 5rpx 20rpx 0 0;}
.txt1{overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.bigpic{width: 100rpx;height: 100rpx;border-radius: 50%;}
.aut .bignam{font-size: 40rpx;margin: 0 0 0 10rpx;}